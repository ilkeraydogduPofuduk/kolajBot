# Application
NODE_ENV=development
PORT=8000
API_PREFIX=/api

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=kolajbot_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000
DB_SSL=false

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=3600000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
MAX_FILES_PER_UPLOAD=100
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/jpg

# CDN (Bunny CDN)
BUNNY_CDN_API_KEY=
BUNNY_CDN_STORAGE_ZONE=
BUNNY_CDN_STORAGE_PASSWORD=
BUNNY_CDN_HOSTNAME=
BUNNY_CDN_PULL_ZONE=

# Google AI (OCR)
GOOGLE_AI_API_KEY=
OCR_PARALLEL_WORKERS=10
OCR_TIMEOUT=30000
OCR_RETRY_COUNT=3

# Email (SMTP)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@kolajbot.com
SMTP_FROM_NAME=KolajBot

# Telegram Bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_URL=

# WhatsApp
WHATSAPP_API_KEY=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_BUSINESS_ACCOUNT_ID=

# Logging
LOG_LEVEL=info
LOG_FILE=true

# Redis (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Background Jobs
COLLAGE_SCHEDULER_INTERVAL=30000
BACKGROUND_WORKERS=8

# Application Settings
APP_NAME=KolajBot API
APP_VERSION=3.0.0
APP_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Feature Flags
ENABLE_SWAGGER=false
ENABLE_METRICS=true
ENABLE_CACHE=true
