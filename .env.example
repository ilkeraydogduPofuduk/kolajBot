# Application
NODE_ENV=development
PORT=3000
APP_NAME=KolajBot
APP_URL=http://localhost:3000

# Database (PostgreSQL) - REQUIRED
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=kolajbot
DB_USER=postgres
DB_PASSWORD=your_password_here

# Redis (Optional - will fall back to memory)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT - REQUIRED
JWT_SECRET=your_very_long_and_secure_jwt_secret_min_32_characters_change_in_production
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CORS
CORS_ORIGIN=*

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Bunny CDN (Optional)
BUNNY_STORAGE_PASSWORD=
BUNNY_API_KEY=
BUNNY_STORAGE_ZONE=kolajbot
BUNNY_PULL_ZONE_URL=https://kolajbot.b-cdn.net

# Google Vision API (Optional)
GOOGLE_APPLICATION_CREDENTIALS=

# Telegram (Optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_URL=

# WhatsApp (Optional)
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_BUSINESS_ACCOUNT_ID=
